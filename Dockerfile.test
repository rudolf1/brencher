# Dockerfile for running integration tests in isolated environment
# This ensures tests don't harm the host environment

FROM python:3.11-slim

# Install git (required for git operations in tests)
RUN apt-get update && \
    apt-get install -y git && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy the backend code and tests
COPY backend/ ./backend/
COPY tests/ ./tests/

# Run tests
CMD ["python", "-m", "pytest", "tests/test_git_integration.py", "-v"]

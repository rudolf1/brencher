{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Local Environment",
            "type": "shell",
            "command": "python",
            "args": [
                "./backend/app.py",
                "brencher_local1",
                "noweb"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Flake8 (Strict)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "flake8",
                ".",
                "--count",
                "--select=E9,F63,F7,F82",
                "--ignore=F824",
                "--show-source",
                "--statistics"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(E\\d+|F\\d+)\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "test"
        },
        {
            "label": "Run Flake8 (Full)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "flake8",
                ".",
                "--count",
                "--exit-zero",
                "--max-complexity=10",
                "--max-line-length=127",
                "--statistics"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(E\\d+|F\\d+|C\\d+)\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "test"
        },
        {
            "label": "Run Mypy",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "mypy",
                "backend",
                "--config-file=mypy.ini"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):\\s+([a-z]+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "test"
        },
        {
            "label": "Run All Linters",
            "dependsOn": [
                "Run Flake8 (Strict)",
                "Run Flake8 (Full)",
                "Run Mypy"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "test"
        }
    ]
}
